<launch>
  <!-- delete old parameters -->
  <!-- <rosparam command="delete" param="/laser_scan_merger"/> -->
  
  <node pkg="ira_laser_tools" name="laser_front_intensity_merge" type="laserscan_multi_merger" output="screen">
    <param name="destination_frame" value="base_link"/>
    <param name="cloud_destination_topic" value="/merged_cloud"/>
    <param name="scan_destination_topic" value="/laser_f/scan_intensity"/>
    <param name="laserscan_topics" value ="/laser_f/scan_intensity_valid /laser_f/scan_intensity_inf" /> <!-- LIST OF THE LASER SCAN TOPICS TO SUBSCRIBE -->

    <param name="angle_min" value="-3.14159"/>
    <param name="angle_max" value="3.14159"/>
    <param name="angle_increment" value="0.0174532923847"/>
    <param name="scan_time" value="0.0962427780032"/>
    <param name="range_min" value="0.15"/>
    <param name="range_max" value="12.0"/>
  </node>
  <node pkg="ira_laser_tools" name="laser_rear_intensity_merge" type="laserscan_multi_merger" output="screen">
    <param name="destination_frame" value="base_link"/>
    <param name="cloud_destination_topic" value="/merged_cloud"/>
    <param name="scan_destination_topic" value="/laser_r/scan_intensity"/>
    <param name="laserscan_topics" value ="/laser_r/scan_intensity_valid /laser_r/scan_intensity_inf" /> <!-- LIST OF THE LASER SCAN TOPICS TO SUBSCRIBE -->

    <param name="angle_min" value="-3.14159"/>
    <param name="angle_max" value="3.14159"/>
    <param name="angle_increment" value="0.0174532923847"/>
    <param name="scan_time" value="0.0962427780032"/>
    <param name="range_min" value="0.15"/>
    <param name="range_max" value="12.0"/>
  </node>
</launch>
